/* Dropando as tab belas */
DROP TABLE bancos;
DROP TABLE contas;
DROP TABLE clientes;


/* Criando todas as tabelas, "contas", "Clientes", "bancos" */
CREATE TABLE IF NOT EXISTS bancos ( IdBanco         INTEGER PRIMARY KEY AUTOINCREMENT,
                                    nome            varchar(50) NOT NULL,
                                    situacao        varchar(1) NOT NULL);                                            


CREATE TABLE IF NOT EXISTS clientes ( IdCliente         INTEGER PRIMARY KEY AUTOINCREMENT,
                                      nome              varchar(50) NOT NULL,
                                      numDocumento      integer (10) NOT NULL,
                                      situacao          varchar(1) NOT NULL);
                                        

CREATE TABLE IF NOT EXISTS contas ( IdConta         INTEGER PRIMARY KEY AUTOINCREMENT,
                                    IdBanco         INTEGER NOT NULL,
                                    IdCliente       INTEGER NOT NULL,
                                    numConta        INTEGER (10) NOT NULL,
                                    saldoInicial    DECIMAL(17,2) DEFAULT 0.00,
                                    situacao        varchar(1) NOT NULL,
                                    CONSTRAINT fk_ContaCliente FOREIGN KEY (IdCliente) REFERENCES clientes (IdCliente));
                                    

